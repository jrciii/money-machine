  exposed-modules:     MoneyMachine.NoopStrategy, MoneyMachine.HistData, MoneyMachine.Env, MoneyMachine.Backtest, MoneyMachine.Candle, MoneyMachine.Chart, MoneyMachine.Cluster, MoneyMachine.ClusterStrategy, MoneyMachine.Order, MoneyMachine.Practice, MoneyMachine.Strategy, MoneyMachine.Trade, MoneyMachine.TechnicalAnalysis, MoneyMachine.MarketHistory, MoneyMachine.Debug
